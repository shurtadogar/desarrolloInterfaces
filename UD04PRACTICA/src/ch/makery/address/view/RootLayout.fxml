<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.RootController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Movies">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#verCartelera" text="Nuevos estrenos" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Usuarios">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#verPersonas" text="Lista de Usuarios" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#aboutUs" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Exit">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#exitApp" text="Salir" />
               </items></Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <ImageView nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <image>
                  <Image url="@../../../../../img/peli.png" />
               </image>
            </ImageView>
            <Button fx:id="loginButton" layoutX="422.0" layoutY="421.0" mnemonicParsing="false" text="Login" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
